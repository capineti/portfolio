            "parameters": {
                "jsCode": "// CORRECCI√ìN CR√çTICA DE MEMORIA (v24)\n// Ahora buscamos el prompt 'aguas arriba' para que no se pierda\n\nconst pineconeResults = $input.all();\nconst originalWebhook = $('Webhook WhatsApp').first().json.body;\n\n// 1. RECUPERAR EL PROMPT PERDIDO\nlet realUserPrompt = \"\";\n\n// Intento A: Vino por Texto?\ntry {\n  const textNode = $('Set Prompt (Texto)').first();\n  if (textNode && textNode.json.prompt) {\n    realUserPrompt = textNode.json.prompt;\n  }\n} catch(e) {}\n\n// Intento B: Vino por Voz? (Sobreescribe si es mas reciente)\ntry {\n  const voiceNode = $('Set Prompt (Voz)').first();\n  if (voiceNode && voiceNode.json.prompt) {\n    realUserPrompt = voiceNode.json.prompt;\n  }\n} catch(e) {}\n\n// Fallback (Si todo falla)\nif (!realUserPrompt) realUserPrompt = \"Dashboard moderno\";\n\n// 2. Extraer Metadata de WhatsApp para no perder el chat\nconst whatsappMeta = {\n  instance: originalWebhook.instance || originalWebhook.body?.instance,\n  remoteJid: originalWebhook.data?.key?.remoteJid || originalWebhook.key?.remoteJid,\n  messageId: originalWebhook.data?.key?.id || originalWebhook.key?.id,\n  sender: originalWebhook.sender || originalWebhook.data?.participant\n};\n\n// 3. Formatear Componentes de Pinecone\nconst componentsByType = {};\npineconeResults.forEach(item => {\n  const doc = item.json.document || item.json;\n  const metadata = doc.metadata || doc || {}; // A veces la meta est√° plana\n  \n  const name = metadata.componentName || metadata.name || 'Component';\n  // Buscamos la KEY en varios lugares comunes\n  const key = metadata.componentKey || metadata.key || metadata.figma_key || metadata.figmaKey || 'unknown';\n  const desc = metadata.description || doc.pageContent || '';\n  \n  if (key !== 'unknown' && !componentsByType[name]) {\n    componentsByType[name] = { name, key, description: desc.substring(0, 200) };\n  }\n});\n\nconst availableComponents = Object.values(componentsByType);\nlet componentsDescription = availableComponents.length > 0 \n    ? availableComponents.map(c => `- NAME: \"${c.name}\" | KEY: \"${c.key}\" | DESC: ${c.description}`).join('\\n')\n    : \"No components found via semantic search.\";\n\nreturn [{\n  json: {\n    userPrompt: realUserPrompt,\n    componentsDescription: componentsDescription,\n    whatsappMeta: whatsappMeta\n  }\n}];"
            },
